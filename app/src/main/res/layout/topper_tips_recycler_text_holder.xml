<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/_5sdp"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/less_border_blue"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textSize="@dimen/_20ssp"
        android:textAlignment="viewStart"
        android:theme="@style/font_semi_bold"
        style="@style/font_semi_bold"
        android:textColor="@color/black"
        android:id="@+id/topper_tips_name"
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/passing_year"
        android:theme="@style/font_regular"
        style="@style/font_regular"
        android:textSize="@dimen/_14ssp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:id="@+id/topper_tips_passing_year"
        android:padding="@dimen/_5sdp"
        android:singleLine="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/college_name"
        android:textSize="@dimen/_14ssp"
        android:textAlignment="viewStart"
        android:theme="@style/font_regular"
        style="@style/font_regular"
        android:textColor="@color/black"
        android:id="@+id/topper_tips_college"
        android:padding="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/message"
        android:theme="@style/font_semi_bold"
        style="@style/font_semi_bold"
        android:textSize="@dimen/_18ssp"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:id="@+id/topper_tips_message"
        android:padding="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"/>
</LinearLayout>