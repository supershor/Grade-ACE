<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:background="@drawable/gradient_blue_to_white"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".SecondLoadingPage">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/signup_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/signup_first_page_view_for_name"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textAlignment="center"
                            android:textSize="@dimen/_26ssp"
                            android:textColor="#109795"/>
                        <TextView
                            android:textSize="@dimen/_16ssp"
                            android:textAlignment="center"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/calculate_ogpa_effortlessly"
                            android:textColor="@color/black"
                            android:layout_marginBottom="@dimen/_20sdp"
                            />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_marginTop="@dimen/_30sdp"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_100sdp"
                                android:src="@drawable/grade_ace_icon"
                                android:layout_centerInParent="true"
                                />
                        </RelativeLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sign_up"
                            android:id="@+id/loading_page_sign_up_name"
                            android:textSize="@dimen/_16ssp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:textColor="@color/grey"
                            android:background="@drawable/less_border_white"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/signup_second_page_view_for_email_and_password"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sign_up"
                            android:textAlignment="center"
                            android:textSize="@dimen/_26ssp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/create_new_account"
                            android:textAlignment="center"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:textColor="@color/black"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:textColorHint="@color/grey"
                            app:counterTextColor="@color/black"
                            app:cursorColor="@color/black"
                            app:hintTextColor="@color/grey"
                            android:layout_marginBottom="@dimen/_22sdp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:inputType="textEmailAddress"
                                android:textSize="@dimen/_16ssp"
                                android:textColorLink="@color/black"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                app:cursorColor="@color/black"
                                android:autofillHints="emailAddress"
                                android:hint="@string/enter_email"
                                android:id="@+id/email_information_sign_up_page"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:textColorHint="@color/grey"
                            app:counterTextColor="@color/grey"
                            app:cursorColor="@color/black"
                            app:hintTextColor="@color/grey"
                            app:counterEnabled="true"
                            android:layout_marginBottom="@dimen/_5sdp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:inputType="textPassword"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/black"
                                app:cursorColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:autofillHints="password"
                                android:hint="@string/enter_password"
                                android:id="@+id/password_information_sign_up_page"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_35sdp"
                            android:layout_marginLeft="@dimen/_35sdp"
                            android:textColorHint="@color/grey"
                            app:counterTextColor="@color/grey"
                            app:cursorColor="@color/black"
                            app:counterEnabled="true"
                            app:hintTextColor="@color/grey"
                            android:layout_marginBottom="@dimen/_5sdp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:inputType="textPassword"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                app:cursorColor="@color/black"
                                android:autofillHints="password"
                                android:hint="@string/confirm_password"
                                android:id="@+id/confirm_password_information_sign_up_page"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <CheckBox
                            android:theme="@style/font_regular"
                            style="@style/font_regular"
                            android:id="@+id/checkbox_agree_for_terms_and_condition_at_sign_up_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:textSize="@dimen/_10ssp"
                            android:text="@string/agree_to_terms_and_condition"
                            android:textColor="@color/black"
                            />
                        <TextView
                            android:theme="@style/font_regular"
                            style="@style/font_regular"
                            android:id="@+id/Privacy_policy_signup"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:textSize="@dimen/_15ssp"
                            android:text="@string/Privacy_policy"
                            android:textColor="@color/black"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/save"
                            android:id="@+id/save_sign_up"
                            android:textSize="@dimen/_16ssp"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:textColor="@color/white"
                            android:background="@drawable/no_border_dark"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/already_have_an_account_sign_up_page"
                        android:layout_height="wrap_content"
                        android:text="@string/already_have_an_account"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/login_page_view_for_email_and_password"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/login"
                            android:textAlignment="center"
                            android:textSize="@dimen/_26ssp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/welcome_back"
                            android:textAlignment="center"
                            android:textSize="@dimen/_20ssp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_25sdp"
                            android:textColor="@color/black"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:textColorHint="@color/grey"
                            app:counterTextColor="@color/black"
                            app:cursorColor="@color/black"
                            app:hintTextColor="@color/grey"
                            android:layout_marginBottom="@dimen/_22sdp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:inputType="textEmailAddress"
                                android:textSize="@dimen/_16ssp"
                                android:textColorLink="@color/black"
                                android:textColor="@color/black"
                                android:textColorHint="@color/grey"
                                app:cursorColor="@color/black"
                                android:autofillHints="emailAddress"
                                android:hint="@string/enter_email"
                                android:id="@+id/email_information_login_up_page"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:textColorHint="@color/grey"
                            app:counterTextColor="@color/grey"
                            app:cursorColor="@color/black"
                            app:hintTextColor="@color/grey"
                            app:counterEnabled="true"
                            android:layout_marginBottom="@dimen/_5sdp">
                            <com.google.android.material.textfield.TextInputEditText
                                android:inputType="textPassword"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/black"
                                app:cursorColor="@color/black"
                                android:textColorHint="@color/grey"
                                android:autofillHints="password"
                                android:hint="@string/enter_password"
                                android:id="@+id/password_information_login_up_page"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:theme="@style/font_regular"
                            style="@style/font_regular"
                            android:id="@+id/Privacy_policy_login"
                            android:layout_width="match_parent"
                            android:textAlignment="center"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_25sdp"
                            android:textSize="@dimen/_15ssp"
                            android:text="@string/Privacy_policy"
                            android:textColor="@color/black"
                            />
                        <androidx.appcompat.widget.AppCompatButton
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/login"
                            android:id="@+id/login_at_login_page"
                            android:textSize="@dimen/_16ssp"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:textColor="@color/white"
                            android:background="@drawable/no_border_dark"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/signup_page_login"
                        android:layout_height="wrap_content"
                        android:text="@string/does_not_have_an_account"
                        android:textAlignment="center"
                        android:textSize="@dimen/_16ssp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>